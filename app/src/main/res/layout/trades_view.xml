<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="20pt">

    <TextView
        android:id="@+id/tV_xlm"
        android:layout_width="84dp"
        android:layout_height="10pt"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="1pt"
        android:layout_toEndOf="@+id/tV_base_amount"
        android:layout_toRightOf="@+id/tV_base_amount"
        android:background="@color/darkGrey"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tV_close_time"
        android:layout_width="150dp"
        android:layout_height="10pt"
        android:layout_alignParentTop="true"
        android:background="@color/darkGrey"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tV_base_amount"
        android:layout_width="150dp"
        android:layout_height="10pt"
        android:layout_alignParentTop="false"

        android:layout_toEndOf="@+id/tV_close_time"
        android:background="@color/darkGrey"
        android:gravity="center"
        android:textColor="@android:color/white"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/tV_counter_amount"
        android:layout_width="150dp"
        android:layout_height="10pt"
        android:layout_below="@+id/tV_base_amount"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="1pt"
        android:layout_toEndOf="@+id/tV_close_time"
        android:layout_toRightOf="@+id/tV_close_time"
        android:background="@color/darkGrey"
        android:gravity="center"
        android:paddingLeft="0dp"
        android:textColor="@android:color/white"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/tV_base_seller"
        android:layout_width="150dp"
        android:layout_height="10pt"
        android:layout_below="@+id/tV_close_time"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1pt"
        android:background="@color/darkGrey"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tV_base_asset_code"
        android:layout_width="84dp"
        android:layout_height="10pt"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/tV_base_amount"
        android:layout_toRightOf="@+id/tV_base_amount"
        android:background="@color/darkGrey"
        android:textColor="@android:color/white" />


</RelativeLayout>
